<body>
    <form action="/register" method="post" class="container"> 
    
        <div class="first-container">
            <h1>Sign Up</h1>
            <p>It's quick and easy</p>
            <hr>
        </div>

        <div class="second-container">
            <input type="text" class="second-container-firstname"  placeholder="First name" name="firstname" required>
            <input type="text" class="second-container-lastname"   placeholder="Last name" name="lastname" required>
        </div>

        <div class="third-container">
            <input type="email" class="third-container-email"   placeholder="Mobile number or Email" name="email" required>
        </div>

        <div class="forth-container">
            <input type="password" class="forth-container-password" placeholder="Password" name="password" required>
        </div>

        <div class="birthday-text">
            <h5>Birthday</h5>
        </div>

        <div class="birthday-section">

        <div>
            <select class="month">
